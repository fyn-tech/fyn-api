option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: fyn-api.wsgi:application
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: static
    
container_commands:
  00_create_static:
    command: "mkdir -p /var/app/current/static"
  01_set_permissions:
    command: |
      chmod 755 /var/app/current/static
      chown webapp:webapp /var/app/current/static
  02_collectstatic:
    command: "source /var/app/venv/*/bin/activate && python manage.py collectstatic --noinput"
  03_migrate:
    command: "source /var/app/venv/*/bin/activate && python manage.py migrate"
    leader_only: true